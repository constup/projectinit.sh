FROM percona:~~~database server version~~~

COPY --chown=mysql:mysql --chmod=644 ./projectinit_docker/dev/percona/etc/my.cnf.d/*.cnf /etc/my.cnf.d/
COPY --chown=mysql:mysql ./projectinit_docker/dev/percona/entrypoint.sh /entrypoint.sh

HEALTHCHECK --timeout=10s --start-period=1m \
    CMD mysqladmin ping \
        --default-auth=caching_sha2_password \
        -h 127.0.0.1 \
        -u $(cat $MYSQL_USER_FILE) \
        -p$(cat $MYSQL_PASSWORD_FILE) \
        --silent
ENTRYPOINT ["/bin/bash", "/entrypoint.sh"]