~~~database service name~~~:
    container_name: ~~~database container name~~~
    image: mysql:~~~database server version~~~
    restart: always
    environment:
      MYSQL_DATABASE_FILE: /run/secrets/mysql_database
      MYSQL_USER_FILE: /run/secrets/mysql_user
      MYSQL_PASSWORD_FILE: /run/secrets/mysql_password
      MYSQL_ROOT_PASSWORD_FILE: /run/secrets/mysql_root_password
    ports:
      - '~~~database host port~~~:3306'
    volumes:
      - ./database_volume:/var/lib/mysql
      - ./projectinit_docker/prod/mysql/etc/mysql/conf.d/:/etc/mysql/conf.d/
      - ./projectinit_docker/prod/mysql/entrypoint.sh:/entrypoint.sh
    entrypoint: ["/bin/bash", "/entrypoint.sh"]
    secrets:
      - mysql_database
      - mysql_user
      - mysql_password
      - mysql_root_password